# Auth0 Configuration
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_AUDIENCE=https://api.ai-project-manager.com
AUTH0_REDIRECT_URI=https://ai-project-manager-auth0.vercel.app/callback

# Session Configuration
SESSION_SECRET=your_very_long_random_session_secret_here
BASE_URL=https://ai-project-manager-auth0.vercel.app

# Fine-Grained Authorization (FGA) Configuration
FGA_API_URL=https://api.fga.dev
FGA_STORE_ID=your_fga_store_id
FGA_MODEL_ID=your_fga_authorization_model_id
FGA_CLIENT_ID=your_fga_client_id
FGA_CLIENT_SECRET=your_fga_client_secret

# Token Vault Configuration (if using separate endpoints)
TOKEN_VAULT_BASE_URL=https://api.auth0.com/api/v2
TOKEN_VAULT_CLIENT_ID=your_token_vault_client_id
TOKEN_VAULT_CLIENT_SECRET=your_token_vault_client_secret

# External API Configuration (for Post-Login Action)
EXTERNAL_API_URL=https://api.internal-db.com
EXTERNAL_API_TOKEN=your_external_api_token
EXTERNAL_API_KEY=your_external_api_key

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Google Calendar API (for Token Vault integration)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Slack API (for Token Vault integration)
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret

# GitHub API (for Token Vault integration)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret